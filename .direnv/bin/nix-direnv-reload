#!/usr/bin/env bash
set -e
if [[ ! -d "/Users/corytheboyd/code/core-power-outage-map" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/Users/corytheboyd/code/core-power-outage-map")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/Users/corytheboyd/code/core-power-outage-map" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/Users/corytheboyd/code/core-power-outage-map/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/Users/corytheboyd/code/core-power-outage-map/.envrc" "/Users/corytheboyd/code/core-power-outage-map/.direnv"/*.rc
